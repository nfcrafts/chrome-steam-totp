{
  "manifest_version": 2,

  "name": "Steam Guard Helper",
  "description": "This extension shows a Steam Totp auth code",
  "version": "1.0",
  "icons": { "128": "icon.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}